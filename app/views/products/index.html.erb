<div class="col-12 col-md-9">
  <% if alert %>
    <div class="alert alert-danger" role="alert">
      <%= alert %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <h2 class="list-title">おすすめBooks</h2>
  <div class="row agw_list-block_row">
    <% @products.each do |product| %>
      <div class="col-6 col-lg-4">
        <p class="agw_bl_img">
          <% if product.picture.present? %>
            <%= link_to (image_tag product.picture, width: 400), product_path(product) %>
          <% else %>
            <%= link_to (image_tag "http://placehold.jp/400x400.png"), product_path(product) %>
          <% end %>
        </p>
        <h3 class="agw_bl_book-ttl">
          <%= link_to product.title, product_path(product) %>
        </h3>
        <p class="agw_bl_date"><%= product.published_on&.strftime("%Y.%m.%d") %></p>
        <p class="agw_bl_author"><%= product.author %></p>
        <p class="agw_bl_plice">
          <%= number_to_currency product.price, precision: 0, unit: "", format: "%u %n" %>
          <span>円</span>
        </p>
      </div><!--/span-->
    <% end %>
  </div><!--/row-->
</div><!--/span-->

<%= render 'sidebar' %>
