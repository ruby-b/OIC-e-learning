<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to t('.edit'), edit_tag_path(tag) %></td>
        <td><%= link_to t('.destroy'), tag, method: :delete,
                data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_tag_path %>
