<div class="col-12 col-md-9">
  <h2 class="list-title">購入する商品</h2>
  <div class="row agw_detail-block_row">

    <div class="col-6 col-md-3">
      <p class="agw_dt_img">
        <% if @product.picture.present? %>
          <%= image_tag @product.picture, width: 400 %>
        <% else %>
          <%= image_tag "http://placehold.jp/400x550.png" %>
        <% end %>
      </p>
    </div><!--/span-->

    <div class="col-6 col-md-9">
      <h3 class="agw_dt_book-ttl"><%= @product.title %></h3>
      <p class="agw_dt_plice2"><%= number_to_currency @product.price, precision: 0, unit: "", format: "%u %n" %><span>円 （税込）</span></p>
    </div>

    <div class="col-12 col-md-9">
      <%= form_with(model: @order, local: true, url: confirm_orders_path) do |form| %>
        <div class="field">
          <%= form.label :quantity %>
          <%= form.number_field :quantity, {class: "form-control", value: 1} %>
        </div>

        <br />

        <div class="field">
          <%= form.label :address %>
          <%= form.text_field :address, {class: "form-control"} %>
        </div>

        <%= form.hidden_field :book_id, value: @product.id %>
        <%= form.hidden_field :user_id, value: current_user.id %>

        <br />

        <div class="field">
          <%= form.submit "注文を確認する", class:"btn btn-warning btn-lg btn-block1" %>
        </div>
      <% end %>
    </div>

  </div><!--/row-->
</div><!--/span-->

<%= render 'products/sidebar' %>
