<div class="col-12 col-md-9">
  <h2 class="list-title">購入する商品</h2>
  <div class="row agw_detail-block_row">

    <% @line_items.each do |item| %>
      <% book = item.book %>

      <div class="col-6 col-md-3">
        <p class="agw_dt_img">
          <% if book.picture.present? %>
            <%= image_tag book.picture, width: 400 %>
          <% else %>
            <%= image_tag "http://placehold.jp/400x550.png" %>
          <% end %>
        </p>
      </div><!--/span-->

      <div class="col-6 col-md-9">
        <h3 class="agw_dt_book-ttl"><%= book.title %></h3>
        <p class="agw_dt_plice3"><%= item.quantity %>冊</p>
        <p class="agw_dt_plice3"><%= number_to_currency item.total_price, precision: 0, unit: "", format: "%u %n" %><span>円 （税込）</span></p>
      </div>
    <% end %>

    <div class="col-12 col-md-9">
      <p class="agw_dt_plice2">合計　<%= @current_cart.total_number %><span>冊</span></p>
      <p class="agw_dt_plice2"><%= number_to_currency @current_cart.total_price, precision: 0, unit: "", format: "%u %n" %><span>円 （税込）</span></p>

      <%= form_with(model: @order, local: true, url: confirm_orders_path) do |form| %>
        <div class="field">
          <%= form.label :address %>
          <%= form.text_field :address, {class: "form-control"} %>
        </div>

        <%= form.hidden_field :user_id, value: current_user&.id %>

        <br />

        <div class="field">
          <%= form.submit "注文を確認する", class:"btn btn-warning btn-lg btn-block1" %>
        </div>
      <% end %>
    </div>

  </div><!--/row-->
</div><!--/span-->

<%= render 'products/sidebar' %>
