<div class="col-12 col-md-9">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <h2 class="list-title">購入する商品</h2>
  <div class="row agw_detail-block_row">

    <% @line_items.each do |item| %>
      <% book = item.book %>

      <div class="col-6 col-md-3">
        <p class="agw_dt_img">
          <% if book.picture.present? %>
            <%= image_tag book.picture, width: 400 %>
          <% else %>
            <%= image_tag "http://placehold.jp/400x550.png" %>
          <% end %>
        </p>
      </div><!--/span-->

      <div class="col-6 col-md-9">
        <h3 class="agw_dt_book-ttl"><%= book.title %></h3>
        <p class="agw_dt_plice3"><%= item.quantity %>冊</p>
        <p class="agw_dt_plice3"><%= number_to_currency item.total_price, precision: 0, unit: "", format: "%u %n" %><span>円 （税込）</span></p>
      </div>
    <% end %>

    <div class="col-12 col-md-9">
      <p class="agw_dt_buy-button">
      <p class="agw_dt_plice2">合計　<%= @cart.total_number %><span>冊</span></p>
      <p class="agw_dt_plice2"><%= number_to_currency @cart.total_price, precision: 0, unit: "", format: "%u %n" %><span>円 （税込）</span></p>
        <%#= link_to '購入する', new_order_path(book_id: @product.id), html_options = {class: "btn btn-lg btn-warning", "aria-pressed"=>"true"} %>
      </p>
    </div>

  </div><!--/row-->
</div>

<%= render 'products/sidebar' %>
